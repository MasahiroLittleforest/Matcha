<div class="ribbon-box">
  <% if project.deadline.past? %>
    <div class="ribbon closed">
      <span class="closed">募集終了</span>
    </div>
  <% elsif project.call_off %>
    <div class="ribbon called_off">
      <span class="called_off">プロジェクト中止</span>
    </div>
  <% elsif project.deadline - DateTime.now <= 5.day %>
    <div class="ribbon closing_soon">
      <span class="closing_soon">締切間近</span>
    </div>
  <% end %>
</div>