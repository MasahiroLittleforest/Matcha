<div class="row university_projects">
    <div class="projects_type_header col-xs-12">
        <h1 class="col-xs-12 col-sm-8 col-md-6"><%= current_user.university.name %>のプロジェクト</h1>
        <div class="col-xs-4 col-sm-2 col-md-2">
            <%= link_to 'すべて見る', all_projects_path, class: "see_all btn btn-primary" %>
        </div>
    </div>
</div>
<div class="row fresh_projects">
    <div class="projects_type_header col-xs-12">
        <div class="projects_type col-xs-9 col-sm-5 col-md-3">
            <h4>新着のプロジェクト</h4>
        </div>
        <div class="col-xs-3 col-sm-2 col-md-2">
            <%= link_to 'もっと見る', fresh_projects_path, class: "see_more btn btn-default btn-sm" %>
        </div>
    </div>
    <div class="col-xs-12">
        <%= render 'projects/projects', projects: @fresh_projects %>
    </div>
</div>
<div class="row popular_projects">
    <div class="projects_type_header col-md-12">
        <div class="projects_type col-xs-9 col-sm-5 col-md-3">
            <h4>人気のプロジェクト</h4>
        </div>
        <div class="col-xs-3 col-sm-2 col-md-2">
            <%= link_to 'もっと見る', popular_projects_path, class: "see_more btn btn-default btn-sm" %>
        </div>
    </div>
    <div class="col-xs-12">
        <%= render 'projects/projects', projects: @popular_projects %>
    </div>
</div>
<div class="row closing_soon_projects">
    <div class="projects_type_header col-md-12">
        <div class="projects_type col-xs-9 col-sm-5 col-md-3">
            <h4>締切間近のプロジェクト</h4>
        </div>
        <div class="col-xs-3 col-sm-2 col-md-2">
            <%= link_to 'もっと見る', closing_soon_projects_path, class: "see_more btn btn-default btn-sm" %>
        </div>
    </div>
    <div class="col-xs-12">
        <%= render 'projects/projects', projects: @closing_soon_projects %>
    </div>
</div>