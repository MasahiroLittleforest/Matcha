<%# 募集人数に対する現在の参加者数の達成度 %>
<% achievement_progress = (project.reverses_of_applikation.where(cancel: false).count.to_f / project.recruitment_numbers.to_f * 100).round %>



<div class="progress">
  <% if project.reverses_of_applikation.where(cancel: false).count.to_f / project.recruitment_numbers.to_f * 100 < 25 %>
    <div id="achievement_progress" class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: <%= achievement_progress %>%;">
      <%= achievement_progress %>%
    </div>
  <% elsif project.reverses_of_applikation.where(cancel: false).count.to_f / project.recruitment_numbers.to_f * 100 < 50 %>
    <div id="achievement_progress" class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: <%= achievement_progress %>%;">
      <%= achievement_progress %>%
    </div>
  <% elsif project.reverses_of_applikation.where(cancel: false).count.to_f / project.recruitment_numbers.to_f * 100 < 75 %>
    <div id="achievement_progress" class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: <%= achievement_progress %>%;">
      <%= achievement_progress %>%
    </div>
  <% else %>
    <div id="achievement_progress" class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: <%= achievement_progress %>%;">
      <%= achievement_progress %>%
    </div>
  <% end %>
</div>