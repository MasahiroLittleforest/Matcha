<%= form_for(@comment_to_project) do |f| %>
  <div class="form-group">
    <%= f.label :comment, 'コメントを投稿' %>
    <%= f.text_area :comment, class: 'form-control', rows: 5 %>
  </div>
  <%= hidden_field_tag :project_id, @project.id %>
  <%= f.submit '投稿する', class: 'btn btn-primary btn-block' %>
<% end %>